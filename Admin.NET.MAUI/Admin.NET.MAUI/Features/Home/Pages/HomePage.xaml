                        </DataTrigger>
                    </Button.Triggers>-->
                </Button>
                <Button
                    Grid.Column="1"
                    Command="{Binding ChangeOutTabCommand}"
                    Style="{x:Static app:Styles.ButtonFlatXs}"
                    Text="出库信息"
                    TextColor="{x:Static app:AppColors.LightBlue}">
